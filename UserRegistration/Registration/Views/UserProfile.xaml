<UserControl x:Class="Registration.Views.UserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registration.Views"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="600">
    <Grid Background="#d6f5f5">
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Top">
            <Button Click="Registration_Click" Background="#c2d6d6" Width="150">
                <TextBlock FontSize="20" FontWeight="Black">Registrate</TextBlock>
            </Button>
            <Button Click="Login_Click" Height="40" Width="150" Background="#c2d6d6" >
                <TextBlock FontSize="20" FontWeight="Black">Log In</TextBlock>
            </Button>
        </StackPanel>
        <TextBlock Text="{Binding Path=UserText,Mode=TwoWay}" Background="#ebfafa" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontStyle="Oblique" FontFamily="Parsons"></TextBlock>
    </Grid>
</UserControl>
